{
  "name": "PDF AI Reader Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A simple sidebar extension example",
  "action": {
    "default_title": "Open Sidebar"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.arxiv.org/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://arxiv.org/pdf/*", 
        "*://*.arxiv.org/pdf/*",
        "*://*/*.pdf",
        "file://*/*.pdf"
      ],
      "js": [
        "pdf-content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "js/pdf.mjs",
      "js/pdf.worker.mjs"
    ],
    "matches": ["<all_urls>"]
  }]
} 
